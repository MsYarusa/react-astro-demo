---
import { navLinks, type NavLink } from "../config/Navigation.ts";

const platform = "github";
const username = "withastro";
---

<footer class="bg-dark text-light py-4 mt-auto">
  <div class="container">
    <div class="row">
      <div class="col-md-4 mb-3">
        <h5>О нас</h5>
        <p>Мы делаем крутые сайты на Astro + React.</p>
      </div>
      <div class="col-md-4 mb-3">
        <h5>Навигация</h5>
        <ul class="list-unstyled">
          {
            navLinks.map((navLink: NavLink) => (
              <li class="nav-item">
                <a
                  class="nav-link text-light text-decoration-none"
                  href={navLink.url}
                >
                  {navLink.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
      <div class="col-md-4 mb-3">
        <h5>Контакты</h5>
        <p>Email: contact@example.com<br />Телефон: +7 (000) 000-00-00</p>
      </div>
      <hr class="border-light" />
      <div class="text-center">
        <small>&copy; 2025 ReactAstroDemoProject. Все права защищены.</small>
      </div>
    </div>

    <style>
      footer {
        position: absolute;
        bottom: 0;
        width: 100%;
      }
    </style>
  </div>
</footer>
